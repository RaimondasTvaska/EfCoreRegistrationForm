@model EfCoreRegistrationForm.Dtos.RegistrationFormDto

@{
    ViewData["Title"] = "Index";
}

<div class="container">

    <h3 class="mb-5"> Registracijos požymiai</h3>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Registracijos požymiai</th>
                <th scope="col">Reikšmė</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var question in @Model.QuestionAnswers)
            {
                <tr>
                    <td>
                        @question.Question.Name
                    </td>
                    <td>
                        @Html.HiddenFor(aq => aq.RegistrationId)
                    </td>

                    <td>
                        <div class="disabled">
                            @Html.DropDownListFor(a => question.AnswerId, new SelectList(question.Question.Options, "Id", "Text"),
                            new { @class = "form-control dropdown" })

                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="form-group">
        <input type="button" value="Koreguoti požymius" class="btn-primary" id="b1" onclick="EnableButtons()" />
        <input type="button" value="Saugoti pataisymus" class="btn-outline-secondary" id="b2" disabled />
        <input type="button" value="Atšaukti pataisymus" class="btn-outline-secondary" id="b2" disabled />
    </div>
</div>
